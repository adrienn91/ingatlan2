{% extends 'layout' %}
{% block scripts %}
<script src="/scripts/favoriteNumber.js"></script>

{% endblock %}
{% block content %}

<h2>Kedvencek</h2>

<div class="row">
  <div class="panel panel-default">
    <div class="panel-heading">Kedvencek</div>
      <div class="panel-body">
        <ul class="list-group">
        {% for favorite in favorites %}
          <li class="list-group-item clearfix">
              <div class="col-md-4 col-sm-6">
            {% if favorite.firstImage.image == null %}
                <img class="img-circle" src="/Image/default.png" width="300" height="150">
            {% else %}
                <img class="img-circle" src="{{ favorite.firstImage.image }}" alt="image"
                width="300" height="150">
            {% endif %}
              </div>
              <div class="col-md-3 col-sm-6">
              <p class="text-center">Város: {{ favorite.property.city }} </p></br>
              <p class="text-center">Cím: {{ favorite.property.address }} </p>
              </div>
              <div class="col-md-3 col-sm-6">
              <p class="text-center">Ár: {{ favorite.property.price }} Ft</p></br>
              <p class="text-center">Terület: {{ favorite.property.size }} nm </p>
              </div>
              <div class="col-md-2 col-sm-6">
                <a href="/advertisments/{{ favorite.property.id }}">
                  Részletek
                </a>
              </div>
          </li>
          
        {% endfor %}
      </ul>
    </div>    
  </div>
</div>
{% endblock %}





      
        
